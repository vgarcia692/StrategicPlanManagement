<div class="container">
    <h1>Iakwe <span>{{user.f_name}}</span>, Welcome to Your Department Portal</h1>
    <br>
    <div>
        <legend>CMI Goals</legend>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Goal</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="goal in goals">
                    <td>{{ $index + 1 }}</td>
                    <td><a href="/deptHead/goalDetail/{{goal.id}}">{{goal.title}}</a></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
