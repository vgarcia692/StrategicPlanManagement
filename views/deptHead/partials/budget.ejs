<!-- Nav --!>
<% include ../nav %>
<!-- Sidebar -->
<% include ../sidebar %>
<!-- /#sidebar-wrapper -->

<!-- Page Content -->
<div id="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
             
				<h1>Budget</h1>
				<div class="gridStyle" ng-grid="gridOptions"></div>
                <hr>
                <br>
                    <form>
                        <legend>Add Line Item</legend>
                    
                        <div class="form-group">
                            <label for="">Line Item</label>
                            <input type="text" class="form-control" id="lineItem" placeholder="Input Line Item" ng-model="newLineItem.lineItemInput">
                        </div>

                        <div class="form-group">
                            <label for="">Funding Source</label>
                            <input type="text" class="form-control" id="fundingSource" placeholder="Input Funding Source" ng-model="newLineItem.fundingSourceInput">
                        </div>

                        <div class="form-group">
                            <label for="">Item Total</label>
                            <input type="number" class="form-control" id="amount" placeholder="Input Item Total" ng-model="newLineItem.itemTotalInput">
                        </div>
                        
                    
                        <button type="submit" class="btn btn-primary" ng-click="addLineItem()">Add</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- /#page-content-wrapper -->
