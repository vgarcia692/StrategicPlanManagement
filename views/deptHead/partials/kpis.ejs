<!-- Page Content -->
<div id="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1>{{goal.title}}</h1>
                <h2>Key Performance Indicators</hw>
                <br>
                <br>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>KPI</th>
                            <th>Target</th>
                            <th>Original</th>
                            <th>Current</th>
                            <th>Goal</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody ng-repeat="kpi in kpis">
                        <tr>
                            <td>{{ $index + 1 }}</td>
                            <td>{{ kpi.keyPerformanceIndicator }}</td>
                            <td>{{ kpi.keyTarget }}</td>
                            <td>{{ kpi.base }}</td>
                            <td>{{ kpi.current }}</td>
                            <td>{{ kpi.target }}</td>
                            <td><a href="deptHead/kpiUpdate/{{kpi.id}}">Update</a></td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
