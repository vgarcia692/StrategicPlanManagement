<div class="container">
    <h1>Board Key Performance Indicators</h1>
    <br>
    <div>
        <legend>CMI Board KPI's</legend>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>KPI</th>
                    <th style="background-color: gray;">2015</th>
                    <th colspan="2" align="center" style="background-color: darkgray;">2016</th>
                </tr>
                <tr>
                    <th></th>
                    <th></th>
                    <th>Fall</th>
                    <th>Spring</th>
                    <th>Summer</th>
                </tr>
            </thead>
            <tbody ng-repeat="kpi in boardKPIs">
                <tr>
                    <td>{{ $index + 1 }}</td>

                    <td>
                    <p ng-if="user.id != kpi.UserId">{{kpi.kpi}}</p>
                    <a ng-if="user.id == kpi.UserId" href="deptHead/boardKpisDetail/{{kpi.id}}">{{ kpi.kpi }}</a>
                    </td>

                    <td>{{kpi.f15}}</td>
                    <td>{{kpi.sp16}}</td>
                    <td>{{kpi.su16}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
 